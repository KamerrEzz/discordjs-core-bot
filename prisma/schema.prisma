generator client {
  provider = "prisma-client"
  output   = "../src/infrastructure/database/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Guild {
  id        String   @id
  prefix    String   @default("!")
  locale    String   @default("en")
  settings  Json     @default("{}")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  welcomeConfig    WelcomeConfig?
  ticketConfig     TicketConfig?
  moderationConfig ModerationConfig?
  levelingConfigs  LevelingConfig[]

  @@index([id])
}

model ModerationConfig {
  guildId         String   @id
  guild           Guild    @relation(fields: [guildId], references: [id], onDelete: Cascade)
  antiSpam        Boolean  @default(false)
  antiLinks       Boolean  @default(false)
  antiNsfw        Boolean  @default(false)
  spamThreshold   Int      @default(5) // Max repeated messages before action
  spamInterval    Int      @default(10) // Time window in seconds
  whitelistedUrls String[] @default([]) // Allowed URLs
  logChannelId    String? // Channel to log moderation actions
}

model WelcomeConfig {
  guildId      String  @id
  guild        Guild   @relation(fields: [guildId], references: [id], onDelete: Cascade)
  enabled      Boolean @default(false)
  channelId    String?
  cardEnabled  Boolean @default(true)
  cardSettings Json    @default("{}")
  message      String?
}

model TicketConfig {
  guildId      String           @id
  guild        Guild            @relation(fields: [guildId], references: [id], onDelete: Cascade)
  enabled      Boolean          @default(false)
  categoryId   String?
  logChannelId String?
  categories   TicketCategory[]
}

model TicketCategory {
  id           String       @id @default(cuid())
  ticketConfig TicketConfig @relation(fields: [guildId], references: [guildId], onDelete: Cascade)
  guildId      String
  name         String
  emoji        String?
  description  String?
  staffRoles   String[]

  @@index([guildId])
}

model LevelingConfig {
  guildId        String  @id
  guild          Guild   @relation(fields: [guildId], references: [id], onDelete: Cascade)
  enabled        Boolean @default(false)
  xpPerMessage   Int     @default(10) // XP ganado por mensaje
  xpCooldown     Int     @default(60) // Segundos entre mensajes para ganar XP
  levelUpMessage String? // Mensaje de subida de nivel (null = desactivado)
  roleRewards    Json    @default("[]") // Array de {level: number, roleId: string}

  @@index([guildId])
}

model LevelingUser {
  id        String   @id @default(cuid())
  guildId   String
  userId    String
  xp        Int      @default(0)
  level     Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([guildId, userId])
  @@index([guildId])
  @@index([userId])
  @@index([guildId, xp])
}
